---
const categorizedItems = [
  {
    category: "Baked Goods",
    items: [
      {
        name: "Lemon Loaf",
        description: "Soft loaf with a bright citrus glaze.",
        price: "$6",
      },
      {
        name: "Brown Butter Cookies",
        description: "Small batch, baked fresh every morning.",
        price: "$4",
      },
    ],
  },
  {
    category: "Drinks",
    items: [
      {
        name: "Cold Brew Coffee",
        description: "Slow-steeped, lightly sweet.",
        price: "$5",
      },
      {
        name: "Iced Hibiscus Tea",
        description: "Tart, floral, summer-y.",
        price: "$4",
      },
    ],
  },
  {
    category: "Seasonal Specials",
    items: [
      {
        name: "Maple Granola Cup",
        description: "Yogurt, roasted oats, local maple syrup.",
        price: "$7",
      },
      {
        name: "Fall Hand Pie",
        description: "Rotating fruit filling from local farms.",
        price: "$5",
      },
    ],
  },
];
---

<section class="my-28 space-y-6 px-4 max-w-xl mx-auto">
  <div>
    <h2 class="text-center text-lg">Your Menu, On Their Screen</h2>
    <p class="text-sm text-center">
      A clean, easy-to-read mobile view, so customers can browse quickly and
      effortlessly.
    </p>
  </div>
  <div
    class="relative w-[320px] h-[640px] border-[3px] border-black bg-[#f4f4f0] shadow-[20px_20px_0px_0px_rgba(0,0,0,0.1)] overflow-hidden flex flex-col mx-auto rounded-2xl"
  >
    <div
      class="h-6 border-b bg-white flex justify-between items-center px-3 font-mono text-[11px]"
    >
      <span>9:41</span>
      <div class="flex gap-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="size-5"
          ><path d="M2 20h.01"></path><path d="M7 20v-4"></path><path
            d="M12 20v-8"></path><path d="M17 20V8"></path></svg
        >
      </div>
    </div>

    <div class="flex-1 overflow-y-auto no-scrollbar">
      <div class="p-4 border-b text-center">
        <h3 class="font-serif text-xl">Sunny Market Goods</h3>
        <ul
          class="font-mono text-[10px] opacity-60 mt-1 flex items-center justify-center gap-3"
        >
          {categorizedItems.map((set) => <li>{set.category}</li>)}
        </ul>
      </div>
      <div class="divide-y divide-black/10">
        {
          categorizedItems.map((set) => (
            <div class="p-4">
              <span class="font-mono text-[10px] opacity-50 block mb-2">
                {set.category}
              </span>
              <div class="space-y-4">
                {set.items.map((item) => (
                  <div>
                    <div class="flex justify-between font-serif mb-1">
                      <span>{item.name}</span>
                      <span class="font-mono text-xs">{item.price}</span>
                    </div>
                    <p class="font-mono text-[10px] opacity-60 leading-tight">
                      {item.description}
                    </p>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <div class="h-12 border-t bg-white flex items-center justify-around">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-neutral-500 size-5"
        ><path d="m12 19-7-7 7-7"></path><path d="M19 12H5"></path></svg
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-neutral-500 size-5"
        ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
      >

      <!-- Plus Circle -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-neutral-500 size-5"
        ><circle cx="12" cy="12" r="10"></circle><path d="M8 12h8"></path><path
          d="M12 8v8"></path></svg
      >

      <!-- Browser Square -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-neutral-500 size-5"
        ><rect width="18" height="18" x="3" y="3" rx="5"></rect></svg
      >

      <!-- 3 Dots -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-neutral-500 size-5"
        ><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"
        ></circle><circle cx="5" cy="12" r="1"></circle></svg
      >
    </div>
  </div>
</section>
